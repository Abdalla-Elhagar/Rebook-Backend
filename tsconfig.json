{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    
    "moduleResolution": "node",
    "module": "CommonJS",
    "target": "ES2020",
    
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}